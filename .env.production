# Production Environment Variables untuk Maroon-NET BCMS

# ============================================================================
# CORE SETTINGS
# ============================================================================
APP_NAME="Maroon-NET BCMS"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://billing.maroon-net.id
APP_TIMEZONE=Asia/Jakarta

# ============================================================================
# DATABASE
# ============================================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=maroon_net_bcms
DB_USERNAME=maroon_admin
DB_PASSWORD=${DB_PASSWORD_PROD}

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=redis
REDIS_PASSWORD=${REDIS_PASSWORD_PROD}
REDIS_PORT=6379

# ============================================================================
# QUEUE
# ============================================================================
QUEUE_CONNECTION=redis
QUEUE_DEFAULT=default

# ============================================================================
# CACHE & SESSION
# ============================================================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ============================================================================
# EMAIL
# ============================================================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=${EMAIL_USERNAME}
MAIL_PASSWORD=${EMAIL_PASSWORD}
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@maroon-net.id
MAIL_FROM_NAME="Maroon-NET"

# ============================================================================
# PAYMENT GATEWAY
# ============================================================================
PAYMENT_GATEWAY=xendit
XENDIT_MODE=production
XENDIT_SECRET_KEY=${XENDIT_SECRET_KEY_PROD}
XENDIT_PUBLIC_KEY=${XENDIT_PUBLIC_KEY_PROD}

# ============================================================================
# WHATSAPP
# ============================================================================
WHATSAPP_ENABLED=true
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PHONE_NUMBER_ID}
WHATSAPP_ACCESS_TOKEN=${WHATSAPP_ACCESS_TOKEN_PROD}

# ============================================================================
# SECURITY
# ============================================================================
SANCTUM_STATEFUL_DOMAINS=billing.maroon-net.id
SESSION_DOMAIN=.maroon-net.id

# ============================================================================
# MONITORING
# ============================================================================
SENTRY_DSN=${SENTRY_DSN_PROD}
SENTRY_ENVIRONMENT=production

# ============================================================================
# OPTIMIZATION
# ============================================================================
OP_CACHE_ENABLE=1
LARAVEL_OCTANE=true